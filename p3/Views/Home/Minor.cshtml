@model p3.Models.MinorModel
@{
    ViewData["Title"] = "Minors";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

<div class="container my-5">
    @if (Model.UgMinors != null && Model.UgMinors.Any())
    {
        @foreach (var program in Model.UgMinors)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h2>@program.name</h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title text-secondary">@program.title</h4>
                    <p class="card-text">@program.description</p>

                    @if (program.courses != null && program.courses.Any())
                    {
                        <div>
                            <h5 class="text-muted">Courses:</h5>
                            <ul class="list-group list-group-flush">
                                @foreach (var course in program.courses)
                                {
                                    <li class="list-group-item">@course</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (program.note != null)
                    {
                        <div class="mt-3">
                            <strong>Note:</strong>
                            <p class="text-warning">@program.note</p>
                        </div>
                    }
                    else
                    {
                        <div class="mt-3">
                            <strong>Note:</strong>
                            <p class="text-muted">No notes available.</p>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-muted">No minors available at this time.</p>
    }
</div>
