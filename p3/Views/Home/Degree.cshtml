@model p3.Models.DegreeModel

@{
    ViewData["Title"] = "Degrees";
}
<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="container">
    <!-- Undergraduate Degrees Section -->
    <section class="mb-5">
        <h2 class="text-primary mb-4">Undergraduate Degrees</h2>
        @if (Model.Undergraduate != null && Model.Undergraduate.Any())
        {
            @foreach (var program in Model.Undergraduate)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h3 class="card-title text-secondary">@program.DegreeName</h3>
                    </div>
                    <div class="card-body">
                        <h5 class="fw-bold">@program.Title</h5>
                        <p class="text-muted">@program.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item fw-bold text-info">Concentrations:</li>
                            @if (program.Concentrations != null && program.Concentrations.Any())
                            {
                                @foreach (var concentration in program.Concentrations)
                                {
                                    <li class="list-group-item">@concentration</li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item text-muted">No concentrations available</li>
                            }
                        </ul>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No undergraduate programs available.</p>
        }
    </section>

    <!-- Graduate Degrees Section -->
    <section>
        <h2 class="text-primary mb-4">Graduate Degrees</h2>
        @if (Model.Graduate != null && Model.Graduate.Any())
        {
            @foreach (var program in Model.Graduate)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h3 class="card-title text-secondary">@program.DegreeName</h3>
                    </div>
                    <div class="card-body">
                        <h5 class="fw-bold">@program.Title</h5>
                        <p class="text-muted">@program.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item fw-bold text-info">Concentrations:</li>
                            @if (program.Concentrations != null && program.Concentrations.Any())
                            {
                                @foreach (var concentration in program.Concentrations)
                                {
                                    <li class="list-group-item">@concentration</li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item text-muted">No concentrations available</li>
                            }
                        </ul>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No graduate programs available.</p>
        }
    </section>
</div>
